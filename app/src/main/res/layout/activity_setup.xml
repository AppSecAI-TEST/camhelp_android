<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_base"
    android:orientation="vertical"
    tools:context="com.camhelp.activity.SetupActivity">

    <include layout="@layout/top_returnandtitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_scroll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--改变主题色-->
            <LinearLayout
                android:id="@+id/ll_color_change"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/ll_item_selector"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/setup_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="改变主题色"
                        android:textSize="16dp" />
                </LinearLayout>


            </LinearLayout>

            <!--检查更新-->
            <LinearLayout
                android:id="@+id/ll_check_version_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_item_selector"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/setup_update" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="检查更新"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="18dp"
                        android:gravity="center"
                        android:text="当前版本v1.0.0"
                        android:textSize="12dp" />
                </LinearLayout>


            </LinearLayout>

            <!--反馈-->
            <LinearLayout
                android:id="@+id/ll_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_item_selector"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/setup_feedback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="反馈"
                        android:textSize="16dp" />
                </LinearLayout>


            </LinearLayout>

            <!--退出系统-->
            <LinearLayout
                android:id="@+id/ll_exit_system"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/ll_item_selector"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/setup_exit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="退出系统"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!--用户注销-->
            <LinearLayout
                android:id="@+id/ll_log_out"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/ll_item_selector"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/setup_changeuser" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="用户注销"
                        android:textSize="16dp" />
                </LinearLayout>


            </LinearLayout>

            <!--用户注销(隐藏)-->
            <Button
                android:id="@+id/btn_log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_mine_writeoff_selector"
                android:text="用户注销"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
